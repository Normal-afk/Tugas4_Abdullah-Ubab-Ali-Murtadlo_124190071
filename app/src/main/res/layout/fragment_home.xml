<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="#FF191919"
            android:src="@drawable/indoyyi" />

        <TextView
            android:id="@+id/tv_populer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:text="For You"
            android:textColor="@color/white"
            android:textSize="10pt" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_home1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_populer"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>